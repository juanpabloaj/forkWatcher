#!/bin/bash
color=1
if [[ $# == "0" ]]; then
	echo "Search new commits in remotes repos"
	echo "Usage:"
	echo -e "\tfwa -d Dir\t: directory to search git repos"
	echo -e "\tfwa -m    \t: output without color"
	exit 0
fi
while getopts 'md:' OPT 
do 
	case $OPT in
	m)
		color=0
		;;
	d)
		reposDir=$OPTARG
		;;
	esac
done
if [[ -d $reposDir ]]; then
	for r in $(ls $reposDir)
	do
		repo=$reposDir/$r
		if [[ -e $repo ]]; then
			cd $repo
			if [[ $color == "1" ]]; then
				fw
			else
				fw -m 
			fi
		fi
	done 
else 
	echo "$reposDir not found"
	exit 0
fi
