#!/bin/bash
opts=0
while getopts 'm' OPT 
do 
	case $OPT in
	m)
		opts=1
		;;
	esac
done
src=( $HOME/src $HOME/src/rails )
for d in ${src[@]} ; do
	for r in $(ls $d)
	do
		repo=$src/$r
		if [[ -e $repo ]]; then
			cd $repo
			if [[ $opts == "0" ]]; then
				fw
			else
				fw -m 
			fi
		fi
	done 
done
